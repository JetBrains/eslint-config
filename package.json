{
  "name": "@jetbrains/eslint-config",
  "version": "6.0.4",
  "description": "JetBrains config for ESLint",
  "author": "JetBrains",
  "license": "Apache-2.0",
  "main": "index.js",
  "files": [
    "*.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JetBrains/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "jetbrains"
  ],
  "devDependencies": {
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "standard-version": "^9.0.0"
  },
  "peerDependencies": {
    "@vitest/eslint-plugin": ">=2.1.1",
    "eslint": ">=6.0.0",
    "eslint-import-resolver-webpack": ">=0.13.0",
    "eslint-plugin-angular": ">=3.3.0",
    "eslint-plugin-import": ">=2.13.0",
    "eslint-plugin-jsx-a11y": ">=6.2.3",
    "eslint-plugin-react": ">=7.14.3",
    "eslint-plugin-react-hooks": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@vitest/eslint-plugin": {
      "optional": true
    },
    "eslint-import-resolver-webpack": {
      "optional": true
    },
    "eslint-plugin-angular": {
      "optional": true
    },
    "eslint-plugin-import": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "lint": "eslint .",
    "release:ci": "npm run lint && standard-version && git push --follow-tags origin master && npm publish"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
